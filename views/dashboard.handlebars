<div class="row">
  <div class="col-auto">
    <h2>Welcome to The Collection {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Add to The Collection</h3>

    <form class="form new-pokemon-card">
      <div class="form-group">
        <label for="pokemon-name">Pokemon:</label>
        <input class="form-input" type="text" id="pokemon-name" name="pokemon-name" />
      </div>
      <div class="form-group">
        <label for="pokemon-desc">Description:</label>
        <textarea class="form-input" id="pokemon-desc" name="pokemon-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Add</button>
      </div>
    </form>
  </div>

  {{#if pokemon.length}}
  <div class="col-md-6 project-list">
    <h3>Current Collection:</h3>

    {{#each pokemons as |pokemon|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/pokemon/{{pokemon.poke_id}}">{{pokemon.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{pokemon.poke_id}}">Delete</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/api_call.js"></script>
