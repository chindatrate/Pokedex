
{{!-- make this the display of all the pokemon in the game.  Make the name of the pokemon a hyperlink so it can be added to the users favorites or caught lists. --}}

<div class="container">
  <div class="row">
    <div class="col-12 d-flex flex-wrap justify-content-around">


      <div class="card mb-5" style="width: 18rem;">
        <div class="card-header">
          <img src={{pokemon.image_url}} class="card-img-top" alt="{{pokemon.name}}">
          <a class="card-title" href="/pokemon/{{pokemon.name}}">{{pokemon.name}}</a>
        </div>
        <div class="card-body">
          <ul class="list-group list-group-flush">
            <li class="list-group-item">Id: {{pokemon.p_id}}</li>
            <li class="list-group-item">Types: {{pokemon.types}}</li>
            <li class="list-group-item">Abilities: {{pokemon.abilities}}</li>
          </ul>
        </div>
      </div>
        
    </div>
  </div>
</div>
<script src="/js/pokemon.js"></script>