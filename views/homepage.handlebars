<!-- Loop over each object in the projects array -->
{{#each pokemons as |pokemon| }}
<div class="flex-row ">
  <div class="flex-column justify-space-around">
    <div class="pokemon-title">
      <h2>
        <a href="/pokemon/{{pokemon.poke_id}}">{{pokemon.name}}</a>
        {{!-- double check how to reference a user_id as part of a query --}}
        Caught by {{pokemon.user_id}} on {{pokemon.date_created}}
      </h2>
    </div>
    <div class="pokemon-body">
      <p>
        {{pokemon.pokemon_description}}
      </p>
    </div>
  </div>
</div>
{{/each}}